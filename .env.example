# X (Twitter) Cookie Configuration
# How to get: Chrome DevTools -> Application -> Cookies -> https://x.com -> Export all as JSON
TWITTER_COOKIES="[{\"name\":\"auth_token\",\"value\":\"your_auth_token\",\"domain\":\".x.com\",\"path\":\"/\"}, ...]"

# Browser Configuration
HEADLESS=true
BROWSER_TYPE="chromium" # chromium, firefox, webkit

# Proxy Settings (Optional)
# Format: http://username:password@proxy.example.com:port
PROXY_URL=""

# Auto-reply Configuration
# JSON array of keywords to match
KEYWORDS=["hello", "hi", "thanks", "help"]
# Reply message. You can use {username} placeholder which will be replaced with @username
REPLY_MESSAGE="@{username} Thank you for your message! This is an automated reply from my bot."
# Check interval in milliseconds (5 minutes = 300000)
CHECK_INTERVAL=300000
# Maximum number of replies per run
MAX_REPLIES_PER_RUN=10

# Session Configuration
SESSION_DIR="./sessions"